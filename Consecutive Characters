class Solution {
    public int maxPower(String s) {
        int count = 1;
        int max_count = 1;
        for(int i = 1;i<s.length();i++){
            if(s.charAt(i) == s.charAt(i-1)){
                count++;
            }else{
                count = 1;
            }
            max_count = Math.max(max_count, count);
        }
        return max_count;
    }
}
